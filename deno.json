{
  "compilerOptions": {
    "allowJs": false
  },
  "fmt": {
    "options": {
      "lineWidth": 160,
      "singleQuote": true
    }
  },
  "importMap": "./map.json",
  "tasks": {
    "build": "deno compile --import-map ./map.json --allow-net --allow-env -o ./dist/reclaimer ./mod.ts",
    "serve": "export $(cat ./.env | xargs) && deno run --allow-net --allow-env --watch ./mod.ts"
  }
}
